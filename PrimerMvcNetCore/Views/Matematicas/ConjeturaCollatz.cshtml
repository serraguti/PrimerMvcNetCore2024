@model List<int>

<h1>Conjetura Collatz</h1>

<form method="post">
    <label>Introduzca número</label>
    <input type="number" name="numero"
        class="form-control"/>
    <button class="btn btn-success">
        Conjetura Collatz
    </button>
</form>
<hr/>

@if (Model != null)
{
    <ul>
        @foreach (int num in Model)
        {
            <li>@num</li>
        }
    </ul>
}

